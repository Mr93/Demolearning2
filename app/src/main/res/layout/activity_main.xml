<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prora.demolearning2.MainActivity">

	<RelativeLayout
			android:id="@+id/test_espresso"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true" >

		<EditText
				android:id="@+id/edit_input"
				android:inputType="text"
				android:hint="rubycell"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>
		<Button
				android:id="@+id/btn_submit"
				android:layout_below="@id/edit_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Submit"
				android:textSize="20sp"
				android:textColor="@android:color/black"/>

	</RelativeLayout>

	<Button
			android:id="@+id/btn_bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:text="Bottom"
			android:textSize="20sp"
			android:textColor="@android:color/black"/>

    <ListView
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/test_espresso"
            android:layout_above="@+id/btn_bottom"
            android:id="@+id/listViewFirstActivity"/>



</RelativeLayout>
